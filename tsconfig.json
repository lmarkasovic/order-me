{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "pretty": true,
    "target": "es2020",
    "outDir": "dist"
  },
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "test"
  ]
}
